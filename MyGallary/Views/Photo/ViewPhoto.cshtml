@model Photo

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div style="max-width: 100%;">
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 100%; height: auto;" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="metadata">
               <h4>Metadata</h4>
                <table class="table">
                    <tbody>
                    <tr>
                        <td>Name:</td>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <td>Date:</td>
                        <td>@Model.DateOfUpload</td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td>@Model.Description</td>
                    </tr>
                    <tr>
                        <td>Tags:</td>
                        <td>@Model.Tags</td>
                    </tr>
                    </tbody>
                </table>
                <div class="mt-3">
                    <a href="@Url.Action("Download", new { id = Model.Id })" class="btn btn-success">Download <i class="bi bi-cloud-arrow-down"></i></a> 
                    <a href="@Url.Action("Copy", new { id = Model.Id })" class="btn btn-success">Copy <i class="bi bi-clipboard"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

